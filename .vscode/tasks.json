{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "build and run c program",
        "command": "gcc",
        "args": ["-g", "${file}", "-o", "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe",";","&","'${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe'"],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }